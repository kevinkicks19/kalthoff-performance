---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { parseTestimonialsFromJSON, getDisplayTestimonials } from '../lib/testimonials';

interface Testimonial {
	testimonial: string;
	name: string;
	position: string;
	organization: string;
	image?: string;
}

// Load testimonials from JSON
const testimonialsFromJSON = await parseTestimonialsFromJSON();
console.log('Total testimonials loaded from JSON:', testimonialsFromJSON.length);

// Get all testimonials to display
const displayTestimonials = getDisplayTestimonials(testimonialsFromJSON);
console.log('Display testimonials count:', displayTestimonials.length);
console.log('Display testimonials:', JSON.stringify(displayTestimonials, null, 2));

// Ensure we have testimonials to display
if (!displayTestimonials.length) {
	console.error('No testimonials available to display');
}

const services = [
	{
		title: 'Performance Programming',
		description: 'Customized training programs designed to enhance athletic performance and achieve specific goals.',
		href: '/services/performance-programming'
	},
	{
		title: 'Rehabilitation Programming',
		description: 'Specialized programs focused on recovery and return to peak performance after injury.',
		href: '/services/rehab-programming'
	},
	{
		title: 'Daily Programming',
		description: 'Structured daily training plans to maintain consistency and progress in your fitness journey.',
		href: '/services/daily-programming'
	}
];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Kalthoff Performance - Your Premier Fitness Destination">
	<!-- Hero Section -->
	<section class="relative min-h-screen bg-black overflow-hidden flex items-center justify-center">
		<!-- Background Pattern -->
		<div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-5"></div>
		
		<!-- Main Content Container -->
		<div class="relative w-[90%] max-w-[1200px] flex flex-col items-center justify-center gap-12 py-16">
			<!-- Top Service Bars -->
			<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 w-full">
				<a href="/services/performance-programming" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Performance Programs</span>
				</a>
				<a href="/services/rehab-programming" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Rehab Programs</span>
				</a>
				<a href="/services/daily-programming" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Daily Life Programs</span>
				</a>
				<a href="/services/team-training" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Team Training</span>
				</a>
			</div>

			<!-- Center Image -->
			<div class="w-full aspect-[16/9] overflow-hidden border-4 border-white shadow-lg relative z-10">
				<img src="/images/kalthoffPerformanceLanding.jpg" alt="Kalthoff Performance" class="w-full h-full object-cover" loading="eager" decoding="async" fetchpriority="high" />
				<div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
			</div>

			<!-- Bottom Service Bars -->
			<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 w-full">
				<a href="/services/home-gym-design" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Home Gym Design</span>
				</a>
				<a href="/services/mentorship" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Collaboration</span>
				</a>
				<a href="/services/sport-science" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">Sport Science</span>
				</a>
				<a href="/about" class="bg-white/70 backdrop-blur-sm rounded-lg p-3 md:p-6 flex items-center justify-center shadow-lg hover:bg-black hover:text-white transition-all duration-300 relative z-10">
					<span class="text-lg md:text-xl font-bebas tracking-wider text-center">About</span>
				</a>
			</div>
		</div>
	</section>

	<!-- Testimonials Section -->
	<section class="py-32 bg-white">
		<div class="container mx-auto px-4">
			<h2 class="text-4xl md:text-6xl font-bebas text-center mb-12 md:mb-20 tracking-wider">What Our Athletes Say</h2>
			
			<!-- Testimonial Slideshow -->
			<div class="relative max-w-3xl mx-auto px-2 sm:px-4 md:px-8">
				<!-- Testimonials Container -->
				<div class="overflow-hidden relative">
					<div id="testimonialSlider" class="flex transition-transform duration-500">
						{displayTestimonials.map((testimonial, index) => (
							<div class="w-full flex-shrink-0">
								<blockquote class="text-center bg-white rounded-lg p-8 shadow-lg">
									<!-- Profile Picture Placeholder -->
									<div class="w-48 h-48 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
										{testimonial.image ? (
											<img 
												src={testimonial.image} 
												alt={testimonial.name} 
												class="w-full h-full rounded-full object-cover"
											/>
										) : (
											<span class="text-gray-500 text-6xl">{testimonial.name.charAt(0)}</span>
										)}
									</div>
									
									<!-- Testimonial Content -->
									<p class="text-gray-700 italic text-lg mb-6">"{testimonial.testimonial}"</p>
									
									<!-- Name and Title -->
									<footer>
										<cite class="font-bebas text-xl tracking-wide">{testimonial.name}</cite>
										<p class="text-gray-600 text-sm mt-2">
											{[testimonial.position, testimonial.organization].filter(Boolean).join(', ')}
										</p>
									</footer>
								</blockquote>
							</div>
						))}
					</div>
				</div>

				<!-- Navigation Buttons -->
				<button 
					class="absolute left-0 top-1/2 -translate-y-1/2 translate-x-1 md:-translate-x-6 bg-black text-white w-8 h-8 md:w-10 md:h-10 rounded-full flex items-center justify-center hover:bg-gray-800 transition-colors"
					aria-label="Previous testimonial"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
					</svg>
				</button>
				<button 
					class="absolute right-0 top-1/2 -translate-y-1/2 -translate-x-1 md:translate-x-6 bg-black text-white w-8 h-8 md:w-10 md:h-10 rounded-full flex items-center justify-center hover:bg-gray-800 transition-colors"
					aria-label="Next testimonial"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</button>
			</div>

			<!-- Dots -->
			<div class="flex justify-center mt-8 space-x-2">
				{displayTestimonials.map((_, index) => (
					<button 
						class={`w-3 h-3 rounded-full ${index === 0 ? 'bg-black' : 'bg-gray-300'}`} 
						data-slide-index={index}
						aria-label={`Go to slide ${index + 1}`}
					></button>
				))}
			</div>

			<!-- Link to Testimonials Page -->
			<div class="text-center mt-12">
				<a 
					href="/testimonials" 
					class="inline-flex items-center gap-2 px-8 py-3 bg-black text-white rounded-full font-bebas tracking-wider text-lg hover:bg-gray-800 transition-all duration-300 hover:transform hover:scale-105"
				>
					View All Testimonials
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- CNWST Slideshow Section -->
	<section class="py-20 bg-black">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="relative rounded-lg overflow-hidden h-[600px] md:h-[800px]">
					<div class="flex transition-transform duration-500" id="cnwstSlider">
						<!-- Slide 1 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/kalthoffCNWST.png" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 2 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/kalthoffCNWST2.png" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 3 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/e7dfdb49-d2f5-4d5f-816a-ede1ae76e50e.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 4 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/de5a1420-b93f-4b5c-96e1-82301542dfd0.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 5 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/C98E40B7-502E-419C-88AC-607F1FDB792D.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 6 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/42639d79-52d4-4ec8-86db-6e6e4ac5a52d.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 7 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/ce983ba1-ac33-49ae-8b88-8467d153ac9b.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 8 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/54764e65-117b-4b1c-85d5-6c3189fd825c.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
						<!-- Slide 9 -->
						<div class="w-full flex-shrink-0">
							<img src="/images/CNWST/e0ac98a2-3b9c-4fa9-b0af-9f3c712c320d.jpg" alt="Canada Soccer Training" class="w-full h-full object-contain" />
						</div>
					</div>
					<!-- Navigation Dots -->
					<div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(0)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(1)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(2)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(3)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(4)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(5)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(6)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(7)"></button>
						<button class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" onclick="goToCNWSTSlide(8)"></button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-black text-white">
		<div class="container mx-auto px-4 text-center max-w-6xl">
			<div class="flex flex-col items-center justify-center">
			<h2 class="text-6xl font-bebas mb-8 tracking-wider">Ready to Start Your Fitness Journey?</h2>
			<p class="text-2xl mb-8 text-gray-300 font-inter font-light tracking-wide">Join us today and transform your life through fitness</p>
				<a href="/contact" class="inline-block bg-white text-black px-8 py-3 rounded-full text-lg font-bebas tracking-wider hover:bg-gray-200 transition duration-300">
				Get Started Now
			</a>
			</div>
		</div>
	</section>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		// Get all slides, dots, and buttons
		const slider = document.getElementById('testimonialSlider');
		const slides = Array.from(document.querySelectorAll('#testimonialSlider > div'));
		const dots = Array.from(document.querySelectorAll('[data-slide-index]'));
		const prevButton = document.querySelector('[aria-label="Previous testimonial"]');
		const nextButton = document.querySelector('[aria-label="Next testimonial"]');
		let currentSlide = 0;
		let sliderInterval;

		// Update the active slide
		function updateSlider() {
			if (slider) {
				slider.style.transform = `translateX(-${currentSlide * 100}%)`;
			}
			
			dots.forEach((dot, index) => {
				if (index === currentSlide) {
					dot.classList.remove('bg-gray-300');
					dot.classList.add('bg-black');
				} else {
					dot.classList.remove('bg-black');
					dot.classList.add('bg-gray-300');
				}
				dot.setAttribute('aria-current', index === currentSlide ? 'true' : 'false');
			});
		}
		
		// Add event listeners for dots
		dots.forEach((dot, index) => {
			dot.addEventListener('click', () => {
				currentSlide = index;
				updateSlider();
			});
		});
		
		// Add event listeners for prev/next buttons
		if (prevButton && nextButton) {
			prevButton.addEventListener('click', () => {
				currentSlide = (currentSlide - 1 + slides.length) % slides.length;
				updateSlider();
			});
			
			nextButton.addEventListener('click', () => {
				currentSlide = (currentSlide + 1) % slides.length;
				updateSlider();
			});
		}
		
		// Start auto-advance
		function startAutoSlide() {
			sliderInterval = setInterval(() => {
				currentSlide = (currentSlide + 1) % slides.length;
				updateSlider();
			}, 5000); // Change slide every 5 seconds
		}

		// Initialize slider
		updateSlider();
		startAutoSlide();

		// CNWST Slider
		let currentCNWSTSlide = 0;
		const cnwstSlider = document.getElementById('cnwstSlider');

		function updateCNWSTSlider() {
			if (cnwstSlider) {
				cnwstSlider.style.transform = `translateX(-${currentCNWSTSlide * 100}%)`;
			}
		}

		function nextCNWSTSlide() {
			currentCNWSTSlide = (currentCNWSTSlide + 1) % 9;
			updateCNWSTSlider();
		}

		function goToCNWSTSlide(slideIndex: number) {
			currentCNWSTSlide = slideIndex;
			updateCNWSTSlider();
		}

		// Auto advance CNWST slides every 10 seconds
		setInterval(nextCNWSTSlide, 10000);
	});
</script>