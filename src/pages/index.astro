<style>
	/* Custom scrollbar for testimonials */
	.testimonial-content {
		scrollbar-width: thin;
		scrollbar-color: #888 #f1f1f1;
		position: relative;
		padding: 0 15px;
		border-left: 3px solid #f1f1f1;
		margin-bottom: 1.5rem;
		line-height: 1.8;
		text-align: left;
		font-size: 1rem;
		max-height: 200px; /* Set initial max height */
		overflow: hidden;
		transition: all 0.5s ease-in-out;
	}
	
	.testimonial-content.expanded {
		max-height: none;
		overflow-y: auto;
		padding-bottom: 1rem;
	}
	
	/* Show more button animations */
	.show-more-btn {
		display: none;
		background: rgba(255, 255, 255, 0.9);
		border: 1px solid #e5e7eb;
		color: #3b82f6;
		border-radius: 9999px;
		width: 2.5rem;
		height: 2.5rem;
		cursor: pointer;
		margin: 0 auto;
		font-size: 0.9rem;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
		transition: all 0.3s;
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		z-index: 20;
	}
	
	.show-more-btn:hover {
		color: #1d4ed8;
		transform: translateX(-50%) translateY(-2px);
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
	}
	
	.show-more-btn:active {
		transform: translateX(-50%) translateY(0);
	}
	
	.show-more-btn.visible {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.show-more-btn::after {
		content: '';
		display: inline-block;
		width: 0.8rem;
		height: 0.8rem;
		border-right: 2px solid currentColor;
		border-bottom: 2px solid currentColor;
		transform: rotate(45deg);
		transition: transform 0.3s;
		position: relative;
		top: -2px;
	}
	
	.show-more-btn[data-expanded="true"]::after {
		transform: rotate(-135deg);
		top: 2px;
	}
	
	/* Larger quote marks */
	.testimonial-content::before {
		content: '"';
		font-size: 4rem;
		line-height: 1;
		color: #eee;
		position: absolute;
		top: -20px;
		left: -15px;
		z-index: -1;
	}
	
	.testimonial-content::after {
		content: '"';
		font-size: 4rem;
		line-height: 1;
		color: #eee;
		position: absolute;
		bottom: -50px;
		right: -15px;
		z-index: -1;
	}

	.testimonial-content-wrapper {
		position: relative;
		margin-bottom: 0.5rem;
		padding-bottom: 2rem;
		min-height: 200px;
	}
	
	.testimonial-content-wrapper.expanded {
		height: auto;
	}
	
	.testimonial-slide {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.8s ease, transform 0.8s ease;
		position: absolute;
		width: 100%;
		left: 0;
		top: 0;
		pointer-events: none;
	}
	
	.testimonial-slide.active {
		opacity: 1;
		transform: translateY(0);
		pointer-events: auto;
		position: relative;
	}
	
	.testimonial-slide blockquote {
		height: auto;
		min-height: 300px;
		display: flex;
		flex-direction: column;
		transition: all 0.5s ease-in-out;
		width: 100%;
		max-width: 100%;
		background: white;
		padding: 2rem;
	}
	
	.testimonial-slide.expanded-slide blockquote {
		height: auto;
	}
	
	.testimonial-slide blockquote footer {
		margin-top: auto; /* Push to bottom of flex container */
		padding-top: 2rem;
		background: white;
		position: relative;
		z-index: 5;
	}
	
	.testimonial-name {
		font-weight: 600;
		letter-spacing: 0.05em;
		transition: color 0.3s ease;
		max-width: 80%;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		margin: 0 auto;
	}
	
	.testimonial-title {
		font-style: italic;
		color: #666;
		max-width: 80%;
		margin: 0.5rem auto 0;
		overflow-wrap: break-word;
		word-wrap: break-word;
		hyphens: auto;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}
	
	.testimonial-content::-webkit-scrollbar {
		width: 4px;
	}
	
	.testimonial-content::-webkit-scrollbar-track {
		background: #f1f1f1;
		border-radius: 10px;
	}
	
	.testimonial-content::-webkit-scrollbar-thumb {
		background: #888;
		border-radius: 10px;
	}
	
	.testimonial-content::-webkit-scrollbar-thumb:hover {
		background: #555;
	}

	/* Container for slides */
	#testimonialSlider {
		position: relative;
		min-height: 400px;
	}

	/* Adjust container sizing to prevent horizontal overflow */
	.container {
		width: 100%;
		max-width: 100%;
		overflow-x: hidden;
	}

	/* Gradient fade for truncated content */
	.testimonial-content::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 50px;
		background: linear-gradient(to top, white, transparent);
		pointer-events: none;
		opacity: 1;
		transition: opacity 0.3s;
	}

	.testimonial-content.expanded::after {
		opacity: 0;
	}
</style>

