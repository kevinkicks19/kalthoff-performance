---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Videos - Kalthoff Performance">
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Training Videos
        </h2>
        <p class="mt-4 text-lg text-gray-500">
          Watch our latest training tips, techniques, and success stories
        </p>

        <!-- Under Construction Section -->
        <div class="mt-8">
          <h3 class="text-2xl font-semibold text-gray-700">Under Construction</h3>
          <p class="mt-2 text-gray-500">Our video content is coming soon. Stay tuned!</p>
          <img src="https://via.placeholder.com/400x200?text=Under+Construction" alt="Under Construction" class="mx-auto mt-4" />
        </div>
      </div>

      <!-- Embed YouTube Video -->
      <div class="mt-12 flex justify-center">
        <div class="aspect-w-16 aspect-h-9 w-full max-w-3xl">
          <iframe
            class="w-full h-full"
            src="https://www.youtube.com/embed/6-MI7CUZj2U"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</Layout> 