---
import Layout from '../../layouts/Layout.astro';

const services = [
  {
    title: 'Performance Programming',
    description: 'Customized strength and conditioning programs for athletes looking to enhance their performance.',
    link: '/services/performance-programming'
  },
  {
    title: 'Rehabilitation Programming',
    description: 'Specialized programs for injury recovery and return to sport.',
    link: '/services/rehab-programming'
  },
  {
    title: 'Daily Programming',
    description: 'Personalized training programs for individuals focused on health and fitness.',
    link: '/services/daily-programming'
  },
  {
    title: 'Team Training',
    description: 'Comprehensive strength and conditioning programs for sports teams.',
    link: '/services/team-training'
  },
  {
    title: 'Sport Science',
    description: 'Advanced performance testing and monitoring for data-driven training.',
    link: '/services/sport-science'
  },
  {
    title: 'Nutrition & Supplements',
    description: 'Expert guidance on nutrition and supplementation to support your training and recovery.',
    link: '/services/nutrition-supplements'
  },
  {
    title: 'Home Gym Design',
    description: 'Professional consultation for creating an effective home training environment.',
    link: '/services/home-gym-design'
  },
  {
    title: 'Mentorship',
    description: 'Guidance for aspiring strength coaches and fitness professionals.',
    link: '/services/mentorship'
  },
  {
    title: 'Collaboration',
    description: 'Professional partnerships and consulting services.',
    link: '/services/collaboration'
  }
];
---

<Layout title="Our Services - Kalthoff Performance">
  <section class="min-h-screen bg-black text-white py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-6xl font-black mb-12 text-center tracking-tight">OUR SERVICES</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {services.map(service => (
          <a href={service.link} class="group">
            <div class="bg-white/5 backdrop-blur-sm p-8 rounded-lg border border-white/10 transition-all duration-300 hover:bg-white/10 hover:scale-105">
              <h2 class="text-2xl font-bold mb-4 tracking-wide group-hover:text-white transition-colors">
                {service.title}
              </h2>
              <p class="text-gray-400 group-hover:text-gray-200 transition-colors">
                {service.description}
              </p>
              <div class="mt-6 flex items-center text-sm font-semibold text-white/60 group-hover:text-white transition-colors">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout> 